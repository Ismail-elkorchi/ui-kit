{
  "name": "@ismail-elkorchi/ui-patterns",
  "version": "0.2.0",
  "description": "Composed UI patterns built from UIK primitives.",
  "author": "Ismail El Korchi",
  "license": "Apache-2.0",
  "type": "module",
  "keywords": [
    "lit",
    "web-components",
    "ui",
    "patterns",
    "composition"
  ],
  "engines": {
    "node": ">=20.11"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "customElements": "dist/custom-elements.json",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./index": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js",
      "default": "./dist/register.js"
    },
    "./custom-elements.json": "./dist/custom-elements.json",
    "./uik-empty-state": {
      "types": "./dist/src/patterns/uik-empty-state/index.d.ts",
      "import": "./dist/src/patterns/uik-empty-state/index.js",
      "default": "./dist/src/patterns/uik-empty-state/index.js"
    },
    "./uik-page-hero": {
      "types": "./dist/src/patterns/uik-page-hero/index.d.ts",
      "import": "./dist/src/patterns/uik-page-hero/index.js",
      "default": "./dist/src/patterns/uik-page-hero/index.js"
    },
    "./uik-section-card": {
      "types": "./dist/src/patterns/uik-section-card/index.d.ts",
      "import": "./dist/src/patterns/uik-section-card/index.js",
      "default": "./dist/src/patterns/uik-section-card/index.js"
    }
  },
  "sideEffects": [
    "./dist/**/*.js"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run cem",
    "clean": "node -e \"const fs = require('fs'); fs.rmSync('dist', {recursive: true, force: true}); fs.rmSync('.tsbuildinfo', {force: true});\"",
    "cem": "cem analyze --config ./custom-elements-manifest.config.cjs --litelement",
    "lint": "eslint . --max-warnings=0 && npm run check:layering",
    "test": "npm run build && vitest --run --project browser --dir .",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "prepack": "npm run build",
    "check:layering": "node tools/check-layering.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ismail-elkorchi/ui-kit.git",
    "directory": "packages/ui-patterns"
  },
  "bugs": {
    "url": "https://github.com/Ismail-elkorchi/ui-kit/issues"
  },
  "homepage": "https://github.com/Ismail-elkorchi/ui-kit",
  "dependencies": {
    "@ismail-elkorchi/ui-primitives": "^0.2.0",
    "@ismail-elkorchi/ui-tokens": "^0.2.0",
    "lit": "^3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

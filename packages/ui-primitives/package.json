{
  "name": "@ismail-elkorchi/ui-primitives",
  "version": "0.1.0",
  "description": "Shadow DOM UI primitives built with Lit and driven by shared tokens.",
  "author": "Ismail El Korchi",
  "license": "Apache-2.0",
  "type": "module",
  "keywords": ["lit", "web-components", "ui", "shadow-dom", "primitives"],
  "engines": {"node": ">=20.11"},
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./index": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js",
      "default": "./dist/register.js"
    },
    "./button": {
      "types": "./dist/uik-button.d.ts",
      "import": "./dist/uik-button.js",
      "default": "./dist/uik-button.js"
    },
    "./badge": {
      "types": "./dist/uik-badge.d.ts",
      "import": "./dist/uik-badge.js",
      "default": "./dist/uik-badge.js"
    },
    "./input": {
      "types": "./dist/uik-input.d.ts",
      "import": "./dist/uik-input.js",
      "default": "./dist/uik-input.js"
    },
    "./separator": {
      "types": "./dist/uik-separator.d.ts",
      "import": "./dist/uik-separator.js",
      "default": "./dist/uik-separator.js"
    }
  },
  "sideEffects": [
    "./dist/**/*.js"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "node -e \"const fs = require('fs'); fs.rmSync('dist', {recursive: true, force: true}); fs.rmSync('.tsbuildinfo', {force: true});\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ismail-elkorchi/ui-kit.git",
    "directory": "packages/ui-primitives"
  },
  "bugs": {
    "url": "https://github.com/Ismail-elkorchi/ui-kit/issues"
  },
  "homepage": "https://github.com/Ismail-elkorchi/ui-kit",
  "dependencies": {
    "lit": "^3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

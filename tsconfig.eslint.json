    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "lib": ["DOM", "DOM.Iterable", "ES2022", "ESNext.Disposable"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts"],
  "exclude": [

{
  "name": "ui-kit",
  "version": "0.0.0",
  "private": true,
  "author": "Ismail El Korchi",
  "license": "Apache-2.0",
  "keywords": [
    "ui-kit",
    "lit",
    "web-components",
    "design-system",
    "monorepo"
  ],
  "engines": {
    "node": ">=20.11"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node ./tools/run-workspaces.mjs build",
    "build-storybook": "storybook build -c .storybook -o storybook-static --disable-telemetry",
    "cem": "node ./tools/cem.mjs",
    "lint": "eslint . --max-warnings=0",
    "lint:style": "stylelint \"**/*.{css,ts,js}\" --max-warnings=0",
    "storybook": "storybook dev -c .storybook -p 6006 --disable-telemetry",
    "test": "node ./tools/run-workspaces.mjs test",
    "test-storybook": "vitest --project=storybook",
    "typecheck": "node ./tools/run-workspaces.mjs typecheck"
  },
  "postcss-lit": {
    "babelOptions": {
      "plugins": [
        "typescript",
        [
          "decorators",
          {
            "decoratorsBeforeExport": true
          }
        ],
        "decoratorAutoAccessors",
        "jsx"
      ]
    }
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@eslint/js": "^9.39.2",
    "@jackolope/lit-analyzer": "^3.2.1",
    "@lit-labs/analyzer": "^0.13.2",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/web-components-vite": "^10.1.10",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-storybook": "10.1.10",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "postcss-lit": "^1.3.1",
    "storybook": "^10.1.10",
    "stylelint": "^16.26.1",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  }
}

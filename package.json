{
  "name": "ui-kit",
  "version": "0.0.0",
  "private": true,
  "author": "Ismail El Korchi",
  "license": "Apache-2.0",
  "keywords": [
    "ui-kit",
    "lit",
    "web-components",
    "design-system",
    "monorepo"
  ],
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/docs",
    "packages/ui-tokens",
    "packages/ui-primitives",
    "packages/ui-shell",
    "packages/ui-patterns"
  ],
  "scripts": {
    "build": "npm run --workspaces --if-present build",
    "postbuild": "npm run contracts:validate",
    "build-storybook": "storybook build -c .storybook -o storybook-static --disable-telemetry",
    "contracts:scaffold:primitive": "node tools/contracts/scaffold-primitive.mjs",
    "contracts:generate": "node tools/contracts/generate.mjs",
    "contracts:validate": "node tools/contracts/generate.mjs --check && node tools/contracts/validate.mjs",
    "contracts:validate:build": "npm -w packages/ui-tokens run build && npm -w packages/ui-primitives run build && npm -w packages/ui-shell run build && npm -w packages/ui-patterns run build && npm run contracts:validate",
    "build:deps": "npm -w packages/ui-tokens run build && npm -w packages/ui-primitives run build && npm -w packages/ui-shell run build && npm -w packages/ui-patterns run build",
    "prebuild-storybook": "npm run --workspaces --if-present build",
    "cem": "npm run --workspaces --if-present cem",
    "lint": "eslint . --max-warnings=0",
    "lint:style": "stylelint \"**/*.{css,ts,js}\" --max-warnings=0",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,mjs,cjs,css,md,json,yml,yaml}\" --ignore-path .gitignore",
    "format:write": "prettier --write \"**/*.{js,jsx,ts,tsx,mjs,cjs,css,md,json,yml,yaml}\" --ignore-path .gitignore",
    "storybook": "storybook dev -c .storybook -p 6006 --disable-telemetry",
    "prestorybook": "npm run --workspaces --if-present build",
    "a11y:storybook": "vitest --project=storybook --run",
    "a11y:storybook:watch": "vitest --project=storybook --watch",
    "test": "npm run build:deps && node tools/esm/check-relative-imports.mjs && node tools/architecture/check-boundaries.mjs && node packages/docs/tools/generate-docs-content.mjs --api --check && node tools/baseline/generate.mjs --check && npm run contracts:validate && ato q validate && npm run --workspaces --if-present test && npm run test-storybook",
    "test-storybook": "npm run a11y:storybook",
    "typecheck": "npm run --workspaces --if-present typecheck"
  },
  "postcss-lit": {
    "babelOptions": {
      "plugins": [
        "typescript",
        [
          "decorators",
          {
            "decoratorsBeforeExport": true
          }
        ],
        "decoratorAutoAccessors",
        "jsx"
      ]
    }
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/web-components-vite": "^10.1.10",
    "@tailwindcss/cli": "^4.0.0",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "axe-core": "^4.10.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-storybook": "10.1.10",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "playwright": "^1.55.0",
    "postcss-lit": "^1.3.1",
    "prettier": "^3.6.2",
    "storybook": "^10.1.10",
    "stylelint": "^16.26.1",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.0.0",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  }
}

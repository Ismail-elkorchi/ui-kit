{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://uik.local/schemas/contracts-entries.schema.json",
  "title": "UIK Shell Contracts Registry",
  "type": "object",
  "required": ["$schema", "schemaVersion", "entries"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/componentEntry"
          },
          {
            "$ref": "#/$defs/utilityEntry"
          }
        ]
      }
    }
  },
  "$defs": {
    "stringList": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "componentEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "id",
        "tagName",
        "summary",
        "attributes",
        "slots",
        "parts",
        "events",
        "a11y",
        "cssVars"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["component"]
        },
        "id": {
          "type": "string"
        },
        "tagName": {
          "type": "string"
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "attributes": {
          "$ref": "#/$defs/stringList"
        },
        "slots": {
          "$ref": "#/$defs/stringList"
        },
        "parts": {
          "$ref": "#/$defs/stringList"
        },
        "events": {
          "$ref": "#/$defs/stringList"
        },
        "a11y": {
          "$ref": "#/$defs/stringList"
        },
        "cssVars": {
          "$ref": "#/$defs/stringList"
        },
        "notes": {
          "$ref": "#/$defs/stringList"
        }
      }
    },
    "utilityEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "id",
        "name",
        "summary",
        "attributes",
        "slots",
        "parts",
        "events",
        "a11y",
        "cssVars"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["utility"]
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "attributes": {
          "$ref": "#/$defs/stringList"
        },
        "slots": {
          "$ref": "#/$defs/stringList"
        },
        "parts": {
          "$ref": "#/$defs/stringList"
        },
        "events": {
          "$ref": "#/$defs/stringList"
        },
        "a11y": {
          "$ref": "#/$defs/stringList"
        },
        "cssVars": {
          "$ref": "#/$defs/stringList"
        },
        "notes": {
          "$ref": "#/$defs/stringList"
        }
      }
    }
  }
}
